# own_window_transparent no
own_window_argb_visual yes
own_window_argb_value 0
double_buffer yes
alignment top_right
background yes
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=10
gap_x 5
gap_y 5
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 2.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

lua_load ~/.config/conky/script.lua

TEXT
$nodename - $sysname $kernel on $machine
$hr
${color grey}/:$color  ${lua_parse format %7s ${fs_used /}}/\
${lua_parse format %7s ${fs_size /}}    ${lua_parse format %3d $fs_used_perc}%\
 ${fs_bar 4 /}
${color grey}M:$color  ${lua_parse format %7s $mem}/\
${lua_parse format %7s $memmax}    ${lua_parse format %3d $memperc}% ${membar 4}
${color grey}1:$color${lua_parse format %3d ${cpu cpu1}}% ${cpubar cpu1 4, 96}\
  ${color grey}2:$color${lua_parse format %3d ${cpu cpu2}}% ${cpubar cpu2 4, 96}
${color grey}3:$color${lua_parse format %3d ${cpu cpu3}}% ${cpubar cpu3 4, 96}\
  ${color grey}4:$color${lua_parse format %3d ${cpu cpu4}}% ${cpubar cpu4 4, 96}
${color grey}L:$color   ${loadavg}  ${color grey}T:$color ${alignr}$uptime
${color grey}F:$color          ${freq_g}GHz\
  ${color grey}P:$color ${alignr}$processes ($running_processes)
${if_existing /proc/net/route eth0}\
${color grey}U:$color  ${lua_parse format %10s ${upspeed eth0}}\
${color grey}D:$color  ${lua_parse format %10s ${downspeed eth0}}\
${else if_existing /proc/net/route wlan0}\
${color grey}U:$color  ${lua_parse format %12s ${upspeedf wlan0}}KiB\
  ${color grey}D:$color  ${lua_parse format %12s ${downspeedf wlan0}}KiB\
${endif}
$hr
${color grey}Name                   PID   CPU%   MEM%
${color lightgrey}${top name 1}     ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey}${top name 2}     ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey}${top name 3}     ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey}${top name 4}     ${top pid 4} ${top cpu 4} ${top mem 4}

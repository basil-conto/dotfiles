# -*- sh -*-

# Whether terminal background is dark
BLC_DARK=0

# Global associative array
declare -A BLC_COLOURS

# Control
BLC_COLOURS[reset]='\e[0m'

# Foreground
BLC_COLOURS[blk]='\e[0;30m'
BLC_COLOURS[red]='\e[0;31m'
BLC_COLOURS[grn]='\e[0;32m'
BLC_COLOURS[ylw]='\e[0;33m'
BLC_COLOURS[blu]='\e[0;34m'
BLC_COLOURS[prp]='\e[0;35m'
BLC_COLOURS[cyn]='\e[0;36m'
BLC_COLOURS[wht]='\e[0;37m'

# Bold
BLC_COLOURS[blk_bf]='\e[1;30m'
BLC_COLOURS[red_bf]='\e[1;31m'
BLC_COLOURS[grn_bf]='\e[1;32m'
BLC_COLOURS[ylw_bf]='\e[1;33m'
BLC_COLOURS[blu_bf]='\e[1;34m'
BLC_COLOURS[prp_bf]='\e[1;35m'
BLC_COLOURS[cyn_bf]='\e[1;36m'
BLC_COLOURS[wht_bf]='\e[1;37m'

# Underlined
BLC_COLOURS[blk_ul]='\e[4;30m'
BLC_COLOURS[red_ul]='\e[4;31m'
BLC_COLOURS[grn_ul]='\e[4;32m'
BLC_COLOURS[ylw_ul]='\e[4;33m'
BLC_COLOURS[blu_ul]='\e[4;34m'
BLC_COLOURS[prp_ul]='\e[4;35m'
BLC_COLOURS[cyn_ul]='\e[4;36m'
BLC_COLOURS[wht_ul]='\e[4;37m'

# Background
BLC_COLOURS[blk_bg]='\e[40m'
BLC_COLOURS[red_bg]='\e[41m'
BLC_COLOURS[grn_bg]='\e[42m'
BLC_COLOURS[ylw_bg]='\e[43m'
BLC_COLOURS[blu_bg]='\e[44m'
BLC_COLOURS[prp_bg]='\e[45m'
BLC_COLOURS[cyn_bg]='\e[46m'
BLC_COLOURS[wht_bg]='\e[47m'

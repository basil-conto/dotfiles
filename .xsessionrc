#!/usr/bin/env sh

[ -r /etc/profile       ] && . /etc/profile
[ -r "${HOME}/.profile" ] && . "${HOME}/.profile"
[ -x "${HOME}/.fehbg"   ] &&   "${HOME}/.fehbg"

xscreensaver -no-splash &

if command -v taffybar; then
  taffybar &
  command -v nm-applet && nm-applet &
  command -v pasystray && pasystray --always-notify &
fi

systemctl start --user redshift-gtk.service

eval $(ssh-agent)

#!/usr/bin/env sh

cowfile="${HOME}/.cowtune"
cowsay=/usr/games/cowsay
shuf='shuf --echo --head-count=1 --'

/usr/games/fortune -aes                                          \
  | "${cowsay}" "-n$(${shuf} '' b d g p s t w y)"                \
                "-f$(${shuf} $(${cowsay} -l | tail --lines=+2))" \
                > "${cowfile}"

#!/usr/bin/env sh

[ -x "$(command -v xset)" ] && xset s 600 10

[ -x "$(command -v xss-lock)"                            \
     -a -x /usr/libexec/xsecurelock/dimmer               \
     -a -x "$(command -v blc-lock)" ]                    \
  && xss-lock --notifier=/usr/libexec/xsecurelock/dimmer \
              --transfer-sleep-lock -- blc-lock &

true
